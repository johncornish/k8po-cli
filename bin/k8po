#!/usr/bin/env bash -e

K8PO_REPO_ROOT=~/workspace/k8po-cli
pushd "${K8PO_REPO_ROOT}"
  ./install.sh
popd

function main() {
  cmd=$1
  if [ -z "${cmd}" ]; then
    # silently exit in case we're running quick install
    exit 0
  fi
  echo "running command '${cmd} ${@:2}'"
  ${K8PO_REPO_ROOT}/hack/test/${cmd}.sh ${@:2}
}

main $@
